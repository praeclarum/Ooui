{
    "version": "2.0.0",
    "command": "dotnet",
    "args": [],
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/PlatformSamples/ConsoleNet6/ConsoleNet6.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceRoot}/Tests/Tests.csproj"
            ],
            "problemMatcher": {
                "owner": "external",
                "fileLocation": "absolute",
                "severity": "error",
                "pattern": [
                    {
                        "regexp": "^Error Message:\\s*$"
                    },
                    {
                        "regexp": "^\\s*(.*)$",
                        "message": 1
                    },
                    {
                        "regexp": "^Stack Trace:\\s*$"
                    },
                    {
                        "regexp": "^\\s*at (.*\\(\\)) in (.*):line (\\d+)$",
                        "file": 2,
                        "location": 3
                    }
                ]
            },
            "group": "test"
        }
    ]
}